@model RegisterPage
@inject IApi Api

@{
    ViewBag.Title = Model.Title;

    // Check if there's an error set in tempData and display it
    string statusMessage = "";

    if ( TempData["StatusMessage"] != null )
    {
        statusMessage = TempData["StatusMessage"].ToString();
    }

    string[] errors = (TempData["Errors"] != null) ? (string[])TempData["Errors"] : null;
}

@section head {
    <link rel="stylesheet/less" type="text/css" href="~/css/portal.min.css">
}

<div class="d-flex justify-content-center form-register">
	<div class="form">
		<div class="logo-box">
			<div class="logo logo-dark"></div>
		</div>

        @if ( !string.IsNullOrWhiteSpace(statusMessage) )
        {
            <span class="statusMessage">@statusMessage</span>
        }

        @if ( errors != null && errors.Length > 0 )
        {
            foreach ( var error in errors )
            {
                <span class="statusMessage">@error</span>
            }
        }

        <form method="post" action="@Model.Fields.ButtonLink.Value">
            <input id="email" type="email" name="email" placeholder="@Model.Fields.Email.Value...">

            <input id="subdomain" type="text" name="subdomain" placeholder="@Model.Fields.Subdomain.Value...">

            <input id="businessUnitName" type="text" name="businessUnitName" placeholder="@Model.Fields.BusinessUnitName.Value...">

            <div class="d-inline-flex">
                <div class="padding padding-right">
                    <input id="password" type="password" name="password" placeholder="@Model.Fields.Password.Value...">
                </div>
                <div class="padding padding-left">
                    <input id="confirmPassword" type="password" name="confirmPassword" placeholder="@Model.Fields.ConfirmPassword.Value...">
                </div>
            </div>

            <div class="box">
                <input id="tos" type="checkbox" name="tos" value="true">
                <label for="tos">@Model.Fields.Tos.Value</label>
            </div>

            <button>@Model.Fields.ButtonText.Value</button>
            <a href="/"><i class="fas fa-arrow-left"></i>@Model.Fields.ReturnButtonText.Value</a>
        </form>
	</div>
</div>