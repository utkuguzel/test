@model OneColumnBlock

<div class="row">
    <div class="col-md">
        <div class="block">
            <div class="border border-white"></div>
            <h3>@Model.Title</h3>
            <div class="divider"></div>

            <div class="row">
                <div class="col-md-12">
                    <div class="block-content">
                        @Html.Raw(Model.Column)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>