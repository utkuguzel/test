@model SetupPage
@inject IApi Api

@{
    ViewBag.Title = Model.Title;

    var rqf = Context.Features.Get<IRequestCultureFeature>();
    var localize = Localizer.WithCulture(rqf.RequestCulture.Culture);
}

@section head {
    <link rel="stylesheet/less" type="text/css" href="~/css/config.min.css">
    <link rel="stylesheet/less" type="text/css" href="~/css/portal.min.css">
    @* Custom scripts *@
    <link rel="stylesheet" href="//www.fuelcdn.com/fuelux/3.13.0/css/fuelux.min.css">
}
    <div id="modalBox"></div>

    <div class="container-fluid">
        <div class="d-flex justify-content-center">
            <div class="setup" data-email="@Model.Email">
                <div class="logo-box wizard-box">
                    <div class="logo logo-dark"></div>
                </div>

                <div class="setup-content">
                    <div class="wizard" data-initialize="wizard" data-restrict="previous" id="myWizard">
                        <div class="steps-container">
                            <ul class="steps">
                                <li data-step="1" data-name="campaign" class="active">
                                    <span class="badge">1</span>@localize["E-mail"]
                                    <span class="chevron"></span>
                                </li>
                                <li data-step="2">
                                    <span class="badge">2</span>@localize["Verification"]
                                    <span class="chevron"></span>
                                </li>
                                <li data-step="3">
                                    <span class="badge">3</span>@localize["Payment"]
                                    <span class="chevron"></span>
                                </li>
                                <li data-step="4">
                                    <span class="badge">4</span>@localize["Setup"]
                                    <span class="chevron"></span>
                                </li>
                            </ul>
                        </div>

                        <div class="step-content">
                            <div class="step-pane active sample-pane alert" data-step="1">
                                <div class="email-working">
                                    <h5 class="environment">@localize["Sending verification e-mail"]</h5>
                                    <i class="fas fa-spinner fa-pulse"></i>
                                    <p>@localize["We're sending a verification e-mail to your e-mail address, one moment please..."]</p>
                                </div>
                            </div>
                            <div class="step-pane active sample-pane alert" data-step="2">
                                <div class="verification-box">
                                    <h4>@localize["Verify your e-mailaddress"]</h4>
                                    <div class="svg svg-mail">
                                        @{
                                            await Html.RenderPartialAsync("~/Views/Shared/Partial/_svg_mail.cshtml");
                                        }
                                    </div>
                                    <h5>@localize["Enter the code that you received in the e-mail we sent you."]</h5>

                                    <div class="verificationForm" @(Model.Code != null ? $"data-code={Model.Code}" : "")>
                                        <input type="text" maxLength="1" size="1" min="0" max="9" pattern="[0-9]{1}" />
                                        <input type="text" maxLength="1" size="1" min="0" max="9" pattern="[0-9]{1}" />
                                        <input type="text" maxLength="1" size="1" min="0" max="9" pattern="[0-9]{1}" />
                                        
                                        <input class="spacer" type="text" maxLength="1" size="1" min="0" max="9" pattern="[0-9]{1}" />
                                        <input type="text" maxLength="1" size="1" min="0" max="9" pattern="[0-9]{1}" />
                                        <input type="text" maxLength="1" size="1" min="0" max="9" pattern="[0-9]{1}" />
                                    </div>

                                    <div class="resend" style="padding: 10px 0">
                                        <a href="javascript:;">@localize["No code received? Click here to send a new one."]</a>
                                    </div>
                                </div>
                            </div>
                            <div class="step-pane step-pane-payment sample-pane alert" data-payment-id="@Model.MolliePaymentId" data-step="3" data-skip="@(Model.SelectedPlan.Price <= 0 ? true : false)">
                                <h4>@localize["Payment"]</h4>
                                <h5>@localize["Start your payment by clicking on the button below."]</h5>

                                <table class="table plan-summary">
                                    <tbody>
                                        <tr>
                                            <th>@localize["Package"]</th>
                                            <td>RentVision - @Model.SelectedPlan.Name</td>
                                        </tr>
                                        <tr>
                                            <th>@localize["Cost"]</th>
                                            <td>&euro; @Model.SelectedPlan.Price.ToString()</td>
                                        </tr>
                                        <tr>
                                            <th>@localize["Subscription type"]</th>
                                            <td>@(Model.SelectedPlan.PayInterval == RentVision.Controllers.PaymentInterval.Yearly ? localize["Yearly"] : localize["Monthly"])</td>
                                        </tr>
                                    </tbody>
                                </table>

                                <div class="clearfix">
                                    <button type="button" class="btn btn-light btn-skip" onclick="$('#confirmSkipPaymentModal').appendTo('#modalBox')" data-toggle="modal" data-target="#confirmSkipPaymentModal">
                                        @localize["Skip"]
                                        <i class="fas fa-times"></i>
                                    </button>

                                    <a href="@(Model.MollieCheckoutUrl != null ? Model.MollieCheckoutUrl : "javascript:;")" data-skip="@(Model.MollieCheckoutUrl == null ? true : false)" id="checkoutButton" class="btn btn-primary">
                                        @localize["Checkout"]
                                        <i class="fas fa-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="step-pane sample-pane alert" data-step="4">
                                <h4>@localize["Environment setup"]</h4>
                                <div class="setup-working">
                                    <h5>@localize["We're setting up your environment"]</h5>
                                    <i class="fas fa-spinner fa-pulse"></i>
                                    <p>@localize["Hold on tight, this may take a few seconds..."]</p>
                                </div>

                                <div class="setup-success">
                                    <h5 class="environment">@localize["Your environment was successfully created"]</h5>
                                    <i class="fas fa-check"></i>
                                    <p>@localize["You can visit your new dashboard by clicking on the button below"]</p>
                                    <a href="/auth/getUserKey" class="btn btn-info">@localize["My dashboard"]</a>
                                </div>

                                <div class="setup-error">
                                    <h5 class="environment">@localize["An error occured"]</h5>
                                    <i class="fas fa-times"></i>
                                    <p>@localize["Please try again. If this problem persists, please contact technical support."]</p>
                                    <a href="/setup" class="btn btn-info">@localize["Try again"]</a>
                                </div>
                            </div>
                        </div>

                        <div class="step-buttons">
                            <span>@localize["This step will update automatically when completing the action above."]</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="confirmSkipPaymentModal" tabindex="-1" role="dialog" aria-labelledby="confirmSkipPaymentModal" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmSkipPaymentModalTitle">@localize["Are you sure?"]</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @localize["Are you sure you want to skip payment? Skipping this step will set your account to a free plan."]
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">@localize["Close"]</button>
                        <button type="button" id="modal-button-skip" class="btn btn-danger">@localize["Skip payment"]</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section script {
    <script src="//www.fuelcdn.com/fuelux/3.13.0/js/fuelux.min.js"></script>
    @* Custom scripts *@
    <script type="text/javascript" src="~/assets/js/setup.js"></script>
    <script type="text/javascript" src="~/assets/js/verificationCode.js"></script>
}