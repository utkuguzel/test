@model PlansPage

@{ 
    var plans = Model.Plans;
    var userPlans = Model.UserPlans;
}

<!-- START PLANS -->
<div class="row">
    <div class="col-lg">
        <div class="plans">
            <div class="plans-inner">
                <div class="row">
                    @if (userPlans.Count > 0)
                    {
                        foreach (var plan in userPlans)
                        {
                            string payInterval = "";

                            switch ( plan.payInterval )
                            {
                                case 1: payInterval = "Yearly"; break;
                                case 2: payInterval = "Monthly"; break;
                                default: payInterval = "Not set"; break;
                            }

                            <div class="col-lg-4 col-sm-6">
                                <div class="plan">
                                    @*<div class="border border-red"></div>*@
                                    <h3 style="text-shadow: none !important;">@plan.Name</h3>
                                    <i class="material-icons-outlined">home</i>

                                    <h5>@plan.Price</h5>
                                    <span>/ @payInterval</span>

                                    <p><a class="button button-active" href="/register">Sign up</a></p>
                                </div>

                                <div class="features">
                                    <ul>
                                        @{
                                            foreach (var feature in Model.Features)
                                            {
                                                string inactive = "";
                                                string icon = "fa-check";

                                                switch (plan.Name)
                                                {
                                                    case "Free":
                                                        inactive = (feature.PlanFreeEnabled) ? "" : "inactive";
                                                        icon = (feature.PlanFreeEnabled) ? "fa-check" : "fa-times";
                                                        break;
                                                    case "Basic":
                                                        inactive = (feature.PlanBasicEnabled) ? "" : "inactive";
                                                        icon = (feature.PlanBasicEnabled) ? "fa-check" : "fa-times";
                                                        break;
                                                    case "Pro":
                                                        inactive = (feature.PlanProEnabled) ? "" : "inactive";
                                                        icon = (feature.PlanProEnabled) ? "fa-check" : "fa-times";
                                                        break;
                                                }

                                                <li class="@inactive">
                                                    <div class="feature">
                                                        <i class="material-icons-outlined">@feature.Icon.Value</i>

                                                        @feature.Title
                                                    </div>
                                                </li>
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END PLANS -->